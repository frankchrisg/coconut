contract selectionSort {

    event sorted(string eventType, string signature);

    function selectsort(int[] memory A, int l, int r, string memory sig) public {
        for (int i = r; i >= l + 1; i--) {
            int q = l;
            for (int j = l + 1; j <= i; j++) {
                if (A[uint(j)] > A[uint(q)]) {
                    q = j;
                }
            }
            exchange(A, q, i);
        }
        emit sorted("sort/selectionSort", sig);
    }

    function exchange(int[] memory A, int q, int i) internal pure {
        int tmp = A[uint(q)];
        A[uint(q)] = A[uint(i)];
        A[uint(i)] = tmp;

    }

}

