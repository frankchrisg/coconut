contract quicksortRec {

    event sorted(string eventType, string signature);

    function quicksort(int[] memory A, int l, int r) public {
        if (l < r) {
            int q = partition(A, l, r);
            quicksort(A, l, q);
            quicksort(A, q + 1, r);
        }
    }

    function main(int[] memory A, int l, int r, string memory sig) public {
        quicksort(A, l, r);
        emit sorted("sort/quickSortRec", sig);
    }

    function partition(int[] memory A, int l, int r) internal returns (int ret) {
        int x = A[uint((l + r) / 2)];
        int i = l - 1;
        int j = r + 1;
        return partition1(A, x, i, j);
    }

    function partition1(int[] memory A, int x, int i, int j) internal returns (int ret) {
        j--;
        if (A[uint(j)] > x) {
            return partition1(A, x, i, j);
        } else {
            return partition2(A, x, i, j);
        }
    }

    function partition2(int[] memory A, int x, int i, int j) internal returns (int ret) {
        i++;
        if (A[uint(i)] < x) {
            return partition2(A, x, i, j);
        } else {
            if (i < j) {
                exchange(A, i, j);
                return partition1(A, x, i, j);
            } else {
                return j;
            }
        }
    }

    function exchange(int[] memory A, int q, int i) internal pure {
        int tmp = A[uint(q)];
        A[uint(q)] = A[uint(i)];
        A[uint(i)] = tmp;
    }
}

