contract selectionSortRec {

    event sorted(string eventType, string signature);

    function selectsortRec(int[] memory A, int l, int r) public {
        if (l < r) {
            int q = max(A, l, l + 1, r);
            exchange(A, q, r);
            selectsortRec(A, l, r - 1);
        }
    }

    function main(int[] memory A, int l, int r, string memory sig) public {
        selectsortRec(A, l, r);
        emit sorted("sort/selectionSortRec", sig);
    }

    function max(int[] memory A, int q, int l, int r) internal returns (int m) {
        if (l <= r) {
            if (A[uint(l)] > A[uint(q)]) {
                return max(A, l, l + 1, r);
            } else {
                return max(A, q, l + 1, r);
            }
        } else {
            return q;
        }
    }

    function exchange(int[] memory A, int q, int i) internal pure {
        int tmp = A[uint(q)];
        A[uint(q)] = A[uint(i)];
        A[uint(i)] = tmp;

    }

}

