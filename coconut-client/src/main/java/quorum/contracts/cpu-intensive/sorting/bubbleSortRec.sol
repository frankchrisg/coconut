contract bubbleSortRec {

    event sorted(string eventType, string signature);

    function bubblesort(int[] memory A, int l, int r) public {
        if (l < r) {
            bubble(A, l, r);
            bubblesort(A, l, r - 1);
        }

    }

    function main(int[] memory A, int l, int r, string memory sig) public {
        bubblesort(A, l, r);
        emit sorted("sort/bubbleSortRec", sig);
    }

    function bubble(int[] memory A, int l, int r) internal {
        if (l < r) {
            if (A[uint(l)] > A[uint(l + 1)]) {
                exchange(A, l, l + 1);
            }
            bubble(A, l + 1, r);
        }
    }

    function exchange(int[] memory A, int q, int i) internal pure {
        int tmp = A[uint(q)];
        A[uint(q)] = A[uint(i)];
        A[uint(i)] = tmp;

    }

}

