# This configuration  file is highly based on the simple benchmark configuration from caliper
# It should be modified manually after creation, see caliper-config.yaml afterwards
# See: https://github.com/hyperledger/caliper/tree/master/benchmark and https://hyperledger.github.io/caliper/docs/Rate_Controllers.html for further configuration options
test:
  name: simple
  description: "This is an example benchmark for Caliper, to test the backend DLTs (Distribution Logistics Infrastructure) performance with simple account opening and querying transactions"
  clients:
{% if CALIPER_USE_ZOOKEEPER == "true" %}
    type: zookeeper
    zoo:
      server: "{{ CALIPER_ZOOKEEPER_SERVER }}"
      clientsPerHost: {{ CALIPER_NUMBER_OF_CLIENTS }}
{% else %}
    type: local
    number: {{ CALIPER_NUMBER_OF_CLIENTS }}
{% endif %}
  rounds:
  - label: open
    txNumber:
    - 1000
    - 1000
    - 1000
    rateControl:
    - type: fixed-rate
      opts:
        tps: 50
    - type: fixed-rate
      opts:
        tps: 2000
    - type: fixed-rate
      opts:
        tps: 150
    arguments:
      money: 10000
    callback: benchmark/simple/open.js
  - label: query
    txNumber:
    - 1000
    - 1000
    rateControl:
    - type: fixed-rate
      opts:
        tps: 100
    - type: fixed-rate
      opts:
        tps: 200
    callback: benchmark/simple/query.js
monitor:
  type:
  - docker
  - process
  docker:
    name:
    - all
  process:
  - command: node
    arguments: local-client.js
    multiOutput: avg
  interval: 1
