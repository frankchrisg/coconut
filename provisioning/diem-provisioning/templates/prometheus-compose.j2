version: "3.3"
services:
  prometheus:
    image: prom/prometheus:latest
    container_name: monitoring_prometheus
    restart: unless-stopped
    volumes:
      #- /var/lib/prometheus-data:/prometheus
      - type: bind
        source: /var/lib/prometheus-data
        target: /prometheus
      #- type: volume
      #  source: prom_db
      #  target: /prometheus
      - type: bind
        source: {{ MAIN_CONFIG_PATH }}/prometheus-configuration.yaml
        target: /etc/prometheus/prometheus.yaml
    command:
      - '--config.file=/etc/prometheus/prometheus.yaml'
      - '--storage.tsdb.retention.time={{ RETENTION_TIME }}'
    network_mode: "host"
    #expose:
    #  - 9090
    #ports:
    #  - 9090:9090
    #links:
    #  - cadvisor:cadvisor
    #  - node-exporter:node-exporter

  node-exporter:
    image: prom/node-exporter:latest
    container_name: monitoring_node_exporter
    restart: unless-stopped
    network_mode: "host"
    #expose:
    #  - 9100

  cadvisor:
    image: google/cadvisor:latest
    container_name: monitoring_cadvisor
    restart: unless-stopped
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    command:
      - '-port=8098'
    network_mode: "host"
