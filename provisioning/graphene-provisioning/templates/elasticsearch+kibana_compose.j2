version: '2'

volumes:
  elasticsearch:
  kibana:

services:
  elasticsearch:
    image: elasticsearch:{{ ELASTICSEARCH_IMAGE_VERSION }}
    container_name: elasticsearch
    environment:
      - discovery.type=single-node
#      - cluster.initial_master_nodes=elasticsearch
#      - cluster.name={{ inventory_hostname }}
#      - bootstrap.memory_lock=true
      - cluster.routing.allocation.disk.threshold_enabled=false
      - "ES_JAVA_OPTS=-Xms1024m -Xmx1024m"
    restart: always
#    network_mode: host
    ulimits:
      memlock:
        soft: -1
        hard: -1
    ports:
      - "9200:9200"
      - "9300:9300"
    volumes:
    - /etc/timezone:/etc/timezone
    - /etc/security/limits.conf:/etc/security/limits.conf
    - /etc/sysctl.conf:/etc/sysctl.conf
  kibana:
    image: kibana:{{ KIBANA_IMAGE_VERSION }}
    container_name: kibana
    environment:
#      - SERVER_NAME: localhost
      - ELASTICSEARCH_HOSTS="http://{{ groups['statistics'].0 }}:9200"
      - ELASTICSEARCH_URL="http://{{ groups['statistics'].0 }}:9300/"
    ports:
      - "5601:5601"
    restart: always
#    network_mode: host
    volumes:
    - /etc/timezone:/etc/timezone
    - /etc/security/limits.conf:/etc/security/limits.conf
    - /etc/sysctl.conf:/etc/sysctl.conf
